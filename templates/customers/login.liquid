<div class="row">
<div class="col-md-6 offset-md-3">

  <div class="border bg-light p-5">
    <h2>Login</h2>
    {% form 'customer_login' %}

    {{ form.errors | default_errors }}

    <div class="mb-3">
      <label for="customer_email" class="form-label">Email Address</label>
      <input type="email" class="form-control" name="customer[email]">
    </div>

    <div class="mb-3">
      <label for="customer_password" class="form-label">Password</label>
      <input type="password" class="form-control" name="customer[password]">
    </div>

    <input type="submit" value="Sign In" class="btn btn-primary">
  </div>

  {% endform %}

  <hr class="my-5">

  <h3>Forgot Password</h3>
  {% form 'recover_customer_password' %}

  {{ form.errors | default_errors }}

  <div class="mb-3">
    <label for="customer_email" class="form-label">Email Address</label>
    <input type="email" name="email" class="form-control">
  </div>

  <input type="submit" value="Submit" class="btn btn-secondary" />

  {% endform %}
</div>
</div>
