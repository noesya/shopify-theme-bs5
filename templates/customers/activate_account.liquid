{% form 'activate_customer_password' %}
  {{ form.errors | default_errors }}
  <div class="password">
    <label for="password">Password</label>
    <input class="form-control" type="password" name="customer[password]" />
  </div>
  <div class="password_confirm">
    <label for="password_confirmation">Password Confirmation</label>
    <input class="form-control" type="password" name="customer[password_confirmation]" />
  </div>
  <div class="middle">
    <input type="submit" value="Activate Account" class="btn btn-primary">
    <span>or</span>
    <input type="submit" name="decline" class="btn btn-outline-danger" value="Decline Invitation" />
  </div>
{% endform %}
