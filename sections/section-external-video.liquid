{%- assign id = section.settings.id_video -%}
{%- assign platform = section.settings.id_platform_video -%}
{% include 'component-external-video' %}

{% schema %}
{
  "name": {
    "en": "Video",
    "fr": "Vidéo"
  },
  "tag": "section",
  "class": "section--external-video py-5",
  "settings": [
    {
      "type": "select",
      "id": "id_platform_video",
      "label": {
        "en": "Which platform?",
        "fr": "Quelle plateforme ?"
      },
      "default": "youtube",
      "options": [
        {
          "value": "youtube",
          "label": "Youtube"
        },
        {
          "value": "vimeo",
          "label": "Vimeo"
        },
        {
          "value": "dailymotion",
          "label": "Dailymotion"
        }
      ]
    },
    {
      "type": "text",
      "id": "id_video",
      "label": {
        "en": "Video ID",
        "fr": "ID de la vidéo"
      }
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Video",
        "fr": "Vidéo"
      },
      "category": {
        "en": "Video",
        "fr": "Video"
      }
    }
  ]
}
{% endschema %}
