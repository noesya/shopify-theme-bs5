{%- assign quote = section.settings.id_quote -%}
{%- assign position = section.settings.id_position -%}
{%- assign cite = section.settings.id_cite -%}
{%- assign background = section.settings.id_background -%}
{% include 'component-quote' %}

{% schema %}
{
  "name": {
    "en": "Quote",
    "fr": "Citation"
  },
  "tag": "section",
  "class": "section--message",
  "settings": [
    {
      "type": "textarea",
      "id": "id_quote",
      "label": {
        "en": "Quote",
        "fr": "Citation"
      }
    },
    {
      "type": "text",
      "id": "id_cite",
      "label": {
        "en": "Cite",
        "fr": "Auteur (facultatif)"
      }
    },
    {
      "type": "select",
      "id": "id_position",
      "label": {
        "en": "Text position?",
        "fr": "Position du texte ?"
      },
      "default": "center",
      "options": [
        {
          "value": "center",
          "label": {
            "en": "Center",
            "fr": "Centrer"
          }
        },
        {
          "value": "left",
          "label": {
            "en": "Left",
            "fr": "Gauche"
          }
        },
        {
          "value": "right",
          "label": {
            "en": "Right",
            "fr": "Droite"
          }
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "id_background",
      "default": false,
      "label": {
        "en": "Grey background?",
        "fr": "Arrière plan gris ?"
      }
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Quote",
        "fr": "Citation"
      },
      "category": {
        "en": "Text",
        "fr": "Texte"
      }
    }
  ]
}
{% endschema %}
