{%- assign grid = section.settings.grid -%}
{%- assign title = section.settings.title -%}
{%- assign subtitle = section.settings.subtitle -%}
{%- assign background = section.settings.background -%}
{%- assign center = section.settings.center -%}
{%- if section.blocks.size != 0 -%}
  {% include 'component-texts' %}
{%- endif -%}

{% schema %}
{
  "name": {
    "en": "Text blocks",
    "fr": "Blocs Texte"
  },
  "class": "section--texts",
  "max_blocks": 4,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": {
        "en": "Title",
        "fr": "Titre"
      }
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": {
        "en": "Subtitle",
        "fr": "Sous-titre"
      }
    },
    {
      "type": "range",
      "id": "grid",
      "label": {
        "en": "Number of column",
        "fr": "Nombre de colonne"
      },
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "center",
      "default": false,
      "label": {
        "en": "Center blocks?",
        "fr": "Centrer les blocs ?"
      }
    },
    {
      "type": "checkbox",
      "id": "background",
      "default": false,
      "label": {
        "en": "Grey background?",
        "fr": "Arrière plan gris ?"
      }
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": {
        "en": "Block",
        "fr": "Bloc"
      },
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": {
            "en": "Title (not required)",
            "fr": "Titre (facultatif)"
          }
        },
        {
          "type": "richtext",
          "id": "text",
          "label": {
            "en": "Text",
            "fr": "Texte"
          }
        },
        {
          "type": "checkbox",
          "id": "center",
          "default": false,
          "label": {
            "en": "Center text?",
            "fr": "Centrer le texte ?"
          }
        }
      ]
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Text blocks",
        "fr": "Blocs Texte"
      },
      "category": {
        "en": "Editorial",
        "fr": "Éditorial"
      },
      "blocks": [
        {
          "type": "block"
        },
        {
          "type": "block"
        }
      ]
    }
  ]
}
{% endschema %}
