{%- assign id = section.settings.id_product -%}
{%- assign item = all_products[id] -%}
{%- assign image = section.settings.image -%}
{%- assign title = section.settings.title -%}
{%- assign subtitle = section.settings.subtitle -%}
{%- assign container = section.settings.container -%}
{%- assign ratio = section.settings.ratio -%}
{%- assign position = section.settings.position -%}
{%- assign cta = section.settings.cta -%}
{%- assign cta_style = section.settings.cta_style -%}
{%- assign background = section.settings.background -%}
{% include 'component-push' %}

{% schema %}
{
  "name": {
    "en": "Collection",
    "fr": "Collection"
  },
  "tag": "section",
  "class": "section--push",
  "settings": [
    {
      "type": "product",
      "id": "id_product",
      "label": {
        "en": "Which product?",
        "fr": "Quelle product ?"
      }
    },
    {
      "type": "select",
      "id": "position",
      "label": {
        "en": "Text position?",
        "fr": "Position du texte ?"
      },
      "default": "center",
      "options": [
        {
          "value": "center",
          "label": {
            "en": "Center",
            "fr": "Centrer"
          }
        },
        {
          "value": "left",
          "label": {
            "en": "Left",
            "fr": "Gauche"
          }
        },
        {
          "value": "right",
          "label": {
            "en": "Right",
            "fr": "Droite"
          }
        }
      ]
    },
    {
      "type": "select",
      "id": "container",
      "label": {
        "en": "Which container?",
        "fr": "Quel container ?"
      },
      "default": "container",
      "options": [
        {
          "value": "container-fluid p-0",
          "label": {
            "en": "Fluid",
            "fr": "Fluide"
          }
        },
        {
          "value": "container",
          "label": {
            "en": "Limit",
            "fr": "Limité"
          }
        }
      ]
    },
    {
      "type": "select",
      "id": "ratio",
      "label": {
        "en": "Which ratio?",
        "fr": "Quel ratio ?"
      },
      "default": "ratio-21x9",
      "options": [
        {
          "value": "ratio-1x1",
          "label": "1x1"
        },
        {
          "value": "ratio-4x3",
          "label": "4x3"
        },
        {
          "value": "ratio-16x9",
          "label": "16x9"
        },
        {
          "value": "ratio-21x9",
          "label": "21x9"
        }
      ]
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": {
        "en": "Add image (not required)",
        "fr": "Ajouter l’image (factultatif)"
      }
    },
    {
      "type": "text",
      "id": "title",
      "label": {
        "en": "Title (not required)",
        "fr": "Titre (factultatif)"
      },
      "info": {
        "en": "Collection title default",
        "fr": "Titre de la collection par défaut"
      }
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": {
        "en": "Subtitle (not required)",
        "fr": "Sous-titre (factultatif)"
      },
      "info": {
        "en": "Collection description default",
        "fr": "Description de la collection par défaut"
      }
    },
    {
      "type": "text",
      "id": "cta",
      "label": {
        "en": "Button text (not required)",
        "fr": "Texte du bouton (factultatif)"
      }
    },
    {
      "type": "select",
      "id": "cta_style",
      "label": {
        "en": "Which button style?",
        "fr": "Quel style pour le bouton ?"
      },
      "default": "btn-primary",
      "options": [
        {
          "value": "btn-primary",
          "label": "Primary"
        },
        {
          "value": "btn-secondary",
          "label": "Secondary"
        },
        {
          "value": "btn-danger",
          "label": "Danger"
        },
        {
          "value": "btn-warning",
          "label": "Warning"
        },
        {
          "value": "btn-light",
          "label": "Light"
        },
        {
          "value": "btn-dark",
          "label": "Dark"
        },
        {
          "value": "btn-outline-primary",
          "label": "Outline primary"
        },
        {
          "value": "btn-outline-secondary",
          "label": "Outline secondary"
        },
        {
          "value": "btn-outline-danger",
          "label": "Outline danger"
        },
        {
          "value": "btn-outline-warning",
          "label": "Outline warning"
        },
        {
          "value": "btn-outline-light",
          "label": "Outline light"
        },
        {
          "value": "btn-outline-dark",
          "label": "Outline dark"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "background",
      "default": false,
      "label": {
        "en": "Grey background?",
        "fr": "Arrière plan gris ?"
      }
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Product",
        "fr": "Product"
      },
      "category": {
        "en": "Push",
        "fr": "Push"
      }
    }
  ]
}
{% endschema %}
