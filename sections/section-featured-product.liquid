{%- assign id = section.settings.id_product -%}
{%- assign background = section.settings.background -%}
{% include 'component-featured-product' %}

{% schema %}
{
  "name": {
    "en": "Featured product",
    "fr": "Produit mis en avant"
  },
  "tag": "section",
  "class": "section--featured-product",
  "settings": [
    {
      "type": "product",
      "id": "id_product",
      "label": {
        "en": "Product",
        "fr": "Produit"
      }
    },
    {
      "type": "checkbox",
      "id": "background",
      "default": false,
      "label": {
        "en": "Grey background?",
        "fr": "Arrière plan gris ?"
      }
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Product",
        "fr": "Produit"
      },
      "category": {
        "en": "Featured",
        "fr": "Mis en avant"
      }
    }
  ]
}
{% endschema %}
