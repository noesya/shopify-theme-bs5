{%- assign id = section.settings.id_article -%}
{%- assign item = articles[id] -%}
{%- assign image = section.settings.id_image -%}
{%- assign title = section.settings.id_title -%}
{%- assign subtitle = section.settings.id_subtitle -%}
{%- assign container = section.settings.id_container -%}
{%- assign ratio = section.settings.id_ratio -%}
{%- assign position = section.settings.id_position -%}
{%- assign cta = section.settings.id_cta -%}
{%- assign cta_style = section.settings.id_cta_style -%}
{%- assign background = section.settings.id_background -%}
{% include 'component-push' %}

{% schema %}
{
  "name": {
    "en": "Article",
    "fr": "Article"
  },
  "tag": "section",
  "class": "section--push",
  "settings": [
    {
      "type": "article",
      "id": "id_article",
      "label": {
        "en": "Which article?",
        "fr": "Quelle article ?"
      }
    },
    {
      "type": "select",
      "id": "id_position",
      "label": {
        "en": "Text position?",
        "fr": "Position du texte ?"
      },
      "default": "center",
      "options": [
        {
          "value": "center",
          "label": {
            "en": "Center",
            "fr": "Centrer"
          }
        },
        {
          "value": "left",
          "label": {
            "en": "Left",
            "fr": "Gauche"
          }
        },
        {
          "value": "right",
          "label": {
            "en": "Right",
            "fr": "Droite"
          }
        }
      ]
    },
    {
      "type": "select",
      "id": "id_container",
      "label": {
        "en": "Which container?",
        "fr": "Quel container ?"
      },
      "default": "container",
      "options": [
        {
          "value": "container-fluid p-0",
          "label": {
            "en": "Fluid",
            "fr": "Fluide"
          }
        },
        {
          "value": "container",
          "label": {
            "en": "Limit",
            "fr": "Limité"
          }
        }
      ]
    },
    {
      "type": "select",
      "id": "id_ratio",
      "label": {
        "en": "Which ratio?",
        "fr": "Quel ratio ?"
      },
      "default": "ratio-21x9",
      "options": [
        {
          "value": "ratio-1x1",
          "label": "1x1"
        },
        {
          "value": "ratio-4x3",
          "label": "4x3"
        },
        {
          "value": "ratio-16x9",
          "label": "16x9"
        },
        {
          "value": "ratio-21x9",
          "label": "21x9"
        }
      ]
    },
    {
      "type": "image_picker",
      "id": "id_image",
      "label": {
        "en": "Add image (not required)",
        "fr": "Ajouter l’image (factultatif)"
      }
    },
    {
      "type": "text",
      "id": "id_title",
      "label": {
        "en": "Title (not required)",
        "fr": "Titre (factultatif)"
      },
      "info": {
        "en": "Default: Article title",
        "fr": "Par défaut : Titre de l’article "
      }
    },
    {
      "type": "text",
      "id": "id_subtitle",
      "label": {
        "en": "Subtitle (not required)",
        "fr": "Sous-titre (factultatif)"
      },
      "info": {
        "en": "Default: Article description ",
        "fr": "Par défaut : Description de l’article "
      }
    },
    {
      "type": "text",
      "id": "id_cta",
      "label": {
        "en": "Button text (not required)",
        "fr": "Texte du bouton (factultatif)"
      }
    },
    {
      "type": "select",
      "id": "id_cta_style",
      "label": {
        "en": "Which button style?",
        "fr": "Quel style pour le bouton ?"
      },
      "default": "btn-primary",
      "options": [
        {
          "value": "btn-primary",
          "label": "Primary"
        },
        {
          "value": "btn-secondary",
          "label": "Secondary"
        },
        {
          "value": "btn-danger",
          "label": "Danger"
        },
        {
          "value": "btn-warning",
          "label": "Warning"
        },
        {
          "value": "btn-light",
          "label": "Light"
        },
        {
          "value": "btn-dark",
          "label": "Dark"
        },
        {
          "value": "btn-outline-primary",
          "label": "Outline primary"
        },
        {
          "value": "btn-outline-secondary",
          "label": "Outline secondary"
        },
        {
          "value": "btn-outline-danger",
          "label": "Outline danger"
        },
        {
          "value": "btn-outline-warning",
          "label": "Outline warning"
        },
        {
          "value": "btn-outline-light",
          "label": "Outline light"
        },
        {
          "value": "btn-outline-dark",
          "label": "Outline dark"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "id_background",
      "default": false,
      "label": {
        "en": "Grey background?",
        "fr": "Arrière plan gris ?"
      }
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Article",
        "fr": "Article"
      },
      "category": {
        "en": "Push",
        "fr": "Push"
      }
    }
  ]
}
{% endschema %}
