{%- assign grid = section.settings.grid -%}
{%- assign surtitle = section.settings.surtitle -%}
{%- assign title = section.settings.title -%}
{%- assign subtitle = section.settings.subtitle -%}
{%- assign url = section.settings.url -%}
{%- assign cta = section.settings.cta -%}
{%- assign cta_style = section.settings.cta_style -%}
{%- assign background = section.settings.background -%}
{%- assign center = section.settings.center_message -%}
{%- if section.blocks.size != 0 -%}
  {% include 'component-featured-products' %}
{%- endif -%}

{% schema %}
{
  "name": {
    "en": "Featured products",
    "fr": "Produits mis en avant"
  },
  "tag": "section",
  "class": "section--featured-products",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "surtitle",
      "label": {
        "en": "Surtitle",
        "fr": "Sur-titre"
      }
    },
    {
      "type": "text",
      "id": "title",
      "label": {
        "en": "Title",
        "fr": "Titre"
      },
      "default": {
        "en": "Products",
        "fr": "Produits"
      }
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": {
        "en": "Subtitle",
        "fr": "Sous-titre"
      }
    },
    {
      "type": "range",
      "id": "grid",
      "label": {
        "en": "Number of column",
        "fr": "Nombre de colonne"
      },
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "url",
      "id": "url",
      "label": {
        "en": "Button url (not required)",
        "fr": "URL du bouton (factultatif)"
      }
    },
    {
      "type": "text",
      "id": "cta",
      "label": {
        "en": "Button text (not required)",
        "fr": "Texte du bouton (factultatif)"
      }
    },
    {
      "type": "select",
      "id": "cta_style",
      "label": {
        "en": "Which button style?",
        "fr": "Quel style pour le bouton ?"
      },
      "default": "btn-primary",
      "options": [
        {
          "value": "btn-primary",
          "label": "Primary"
        },
        {
          "value": "btn-secondary",
          "label": "Secondary"
        },
        {
          "value": "btn-danger",
          "label": "Danger"
        },
        {
          "value": "btn-warning",
          "label": "Warning"
        },
        {
          "value": "btn-light",
          "label": "Light"
        },
        {
          "value": "btn-dark",
          "label": "Dark"
        },
        {
          "value": "btn-outline-primary",
          "label": "Outline primary"
        },
        {
          "value": "btn-outline-secondary",
          "label": "Outline secondary"
        },
        {
          "value": "btn-outline-danger",
          "label": "Outline danger"
        },
        {
          "value": "btn-outline-warning",
          "label": "Outline warning"
        },
        {
          "value": "btn-outline-light",
          "label": "Outline light"
        },
        {
          "value": "btn-outline-dark",
          "label": "Outline dark"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "background",
      "default": false,
      "label": {
        "en": "Background?",
        "fr": "Arrière plan ?"
      }
    }
  ],
  "blocks": [
    {
      "type": "featured_product",
      "name": {
        "en": "Product",
        "fr": "Produit"
      },
      "settings": [
        {
          "type": "product",
          "id": "id_product",
          "label": {
            "en": "Product",
            "fr": "Produit"
          }
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "blocks": [
        {
          "type": "featured_product"
        },
        {
          "type": "featured_product"
        },
        {
          "type": "featured_product"
        }
      ]
    }
  ]
}
{% endschema %}
