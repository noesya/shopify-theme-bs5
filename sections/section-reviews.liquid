{%- assign surtitle = section.settings.surtitle -%}
{%- assign title = section.settings.title -%}
{%- assign subtitle = section.settings.subtitle -%}
{%- assign background = section.settings.background -%}
{%- assign grid = section.settings.grid -%}
{%- assign grid_mobile = section.settings.grid_mobile -%}
{%- assign grid_tablet = section.settings.grid_tablet -%}
{%- assign carousel_autoplay = section.settings.carousel_autoplay -%}
{%- assign carousel_arrows = section.settings.carousel_arrows -%}
{%- assign carousel_pagination = section.settings.carousel_pagination -%}
{%- if section.blocks.size != 0 -%}
  {% include 'component-ratings' %}
{%- endif -%}

{% schema %}
{
  "name": {
    "en": "Reviews",
    "fr": "Avis"
  },
  "class": "section--reviews",
  "max_blocks": 8,
  "settings": [
    {
      "type": "text",
      "id": "surtitle",
      "label": {
        "en": "Surtitle",
        "fr": "Sur-titre"
      }
    },
    {
      "type": "text",
      "id": "title",
      "label": {
        "en": "Title",
        "fr": "Titre"
      }
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": {
        "en": "Subtitle",
        "fr": "Sous-titre"
      }
    },
    {
      "type": "range",
      "id": "grid",
      "label": {
        "en": "Number of column",
        "fr": "Nombre de colonne"
      },
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "grid_mobile",
      "label": {
        "en": "Number of column (mobile)",
        "fr": "Nombre de colonne (mobile)"
      },
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "grid_tablet",
      "label": {
        "en": "Number of column (tablet)",
        "fr": "Nombre de colonne (tablet)"
      },
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "carousel_autoplay",
      "label": {
        "en": "Autoplay carousel?",
        "fr": "Carousel autoplay ?"
      }
    },
    {
      "type": "checkbox",
      "id": "carousel_arrows",
      "label": {
        "en": "Arrows carousel?",
        "fr": "Carousel flêches ?"
      }
    },
    {
      "type": "checkbox",
      "id": "carousel_pagination",
      "default": true,
      "label": {
        "en": "Pagination carousel?",
        "fr": "Carousel pagination ?"
      }
    },
    {
      "type": "checkbox",
      "id": "background",
      "label": {
        "en": "Background?",
        "fr": "Arrière plan ?"
      }
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": {
        "en": "Block",
        "fr": "Bloc"
      },
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": {
            "en": "Name",
            "fr": "Nom"
          }
        },
        {
          "type": "richtext",
          "id": "text",
          "label": {
            "en": "Text",
            "fr": "Texte"
          }
        },
        {
          "type": "range",
          "id": "rating",
          "max": 5,
          "min": 0,
          "step": 1,
          "default": 4,
          "label": {
            "en": "Rating?",
            "fr": "Évaluation ?"
          }
        }
      ]
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Reviews block",
        "fr": "Bloc d’avis"
      },
      "category": {
        "en": "Marketing",
        "fr": "Marketing"
      },
      "blocks": [
        {
          "type": "block"
        },
        {
          "type": "block"
        }
      ]
    }
  ]
}
{% endschema %}
