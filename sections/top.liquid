        "fr": "Message"
      }
    },
    {
      "type": "select",
      "id": "top_type_message",
      "label": {
        "en": "Which type?",
        "fr": "Quel type ?"
      },
      "default": "warning",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        },
        {
          "value": "info",
          "label": "Info"
        },
        {
          "value": "danger",
          "label": "Danger"
        },
        {
          "value": "warning",
          "label": "Warning"
        },
        {
          "value": "success",
          "label": "Success"
        },
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "top_align_message",
      "default": false,
      "label": {
        "en": "Center text?",
