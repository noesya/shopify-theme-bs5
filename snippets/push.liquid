<div class="card">
  <div class="ratio {{ ratio }} bg-light">
    {%- if image -%}
      <img src="{{ image | img_url: 'x450' }}" alt="{{ custom_title }}" class="img-fluid">
    {%- elsif item.image -%}
      <img src="{{ item.image | img_url: '400x400', crop: 'bottom' }}" alt="{{ custom_title }}" class="img-fluid">
    {%- endif -%}
  </div>
  <div class="card-img-overlay">
    <div class="row {{ row_class }} h-100">
      <div class="col-md-4 {{ col_class }}">
        {%- if custom_title != blank -%}
          <h2 class="display-4">{{ custom_title }}</h2>
        {%- endif -%}
        {%- if custom_subtitle != blank -%}
          <p>{{ custom_subtitle }}</p>
        {%- endif -%}
        <a href="{{ custom_url }}" class="btn {{ cta_style }} stretched-link">{{ custom_cta }}Â <span class="material-icons-outlined">trending_flat</span></a>
      </div>
    </div>
  </div>
</div>
