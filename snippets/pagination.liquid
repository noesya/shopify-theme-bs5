<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">

    {% unless paginate.previous.is_link %}
      <li class="page-item disabled">
        <button class="page-link" disabled aria-disabled="true">
          {{ 'general.pagination.previous' | t }}
        </button>
      </li>
      {% else %}
      <li class="page-item">
        <a href="{{ paginate.previous.url }}" class="page-link">
          {{ 'general.pagination.previous' | t }}
        </a>
      </li>
    {% endunless %}

    {% for part in paginate.parts %}
      {% if part.is_link %}
        <li class="page-item">
          <a href="{{ part.url }}" class="page-link">{{ part.title }}</a>
        </li>
      {% else %}
        {% if part.title == paginate.current_page %}
          <li class="page-item active" aria-current="page">
            <span class="page-link">{{ part.title }}</span>
          </li>
        {% else %}
          <li class="page-item">
            <span class="page-link">{{ part.title }}</span>
          </li>
        {% endif %}
      {% endif %}
    {% endfor %}

    {% unless paginate.next.is_link %}
      <li class="page-item disabled">
        <button class="page-link" disabled aria-disabled="true">
          {{ 'general.pagination.next' | t }}
        </button>
      </li>
    {% else %}
      <li class="page-item">
        <a href="{{ paginate.next.url }}" class="page-link">
          {{ 'general.pagination.next' | t }}
        </a>
      </li>
    {% endunless %}
  </ul>
