{% case grid %}
  {% when 1 %}
    {%- assign col = '' -%}
    {%- assign mb = '' -%}
  {% when 2 %}
    {%- assign col = 'row-cols-md-2' -%}
    {%- assign mb = 'mb-4 mb-md-0' -%}
  {% when 3 %}
    {%- assign col = 'row-cols-md-3' -%}
    {%- assign mb = 'mb-4 mb-md-0' -%}
  {% when 4 %}
    {%- assign col = 'row-cols-2 row-cols-md-3 row-cols-lg-4' -%}
    {%- assign mb = 'mb-4 mb-lg-0' -%}
  {% when 5 %}
    {%- assign col = 'row-cols-2 row-cols-md-3 row-cols-lg-5' -%}
    {%- assign mb = 'mb-4 mb-lg-0' -%}
{% endcase %}

{%- if background -%}
  {%- assign custom_background = 'bg-light' -%}
{%- endif -%}

{%- assign align = '' -%}
{%- if center -%}
  {%- assign align = 'justify-content-md-center' -%}
{%- endif -%}

<div class="py-5 {{ custom_background }}">
  <div class="container">
    {% if title != blank %}
      <div class="text-center">
        <h2>{{ title | escape }}</h2>
        {% if subtitle != blank %}
          <p>{{ subtitle | escape }}</p>
        {% endif %}
      </div>
    {% endif %}
    <div class="row row-cols-1 {{ col }} {{ align }}">
      {% for block in section.blocks limit: section.blocks.size %}
        <div class="col {{ mb }}" {{ block.shopify_attributes }}>
          {%- include 'image', src: block.settings.image, size: '400x400', crop: 'bottom' img_class: 'img-fluid' -%}
        </div>
      {% endfor %}
    </div>
    {% if cta != blank %}
    <div class="text-center mt-md-4 ">
      <a href="{{ cta_url }}" class="btn {{ cta_style }}">{{ cta }}</a>
    </div>
    {% endif %}
  </div>
</div>
