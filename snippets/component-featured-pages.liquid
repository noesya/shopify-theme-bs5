{% case grid %}
  {% when 1 %}
    {%- assign col = '' -%}
    {%- assign mb = '' -%}
  {% when 2 %}
    {%- assign col = 'row-cols-md-2' -%}
    {%- assign mb = 'mb-3 mb-md-0' -%}
  {% when 3 %}
    {%- assign col = 'row-cols-md-3' -%}
    {%- assign mb = 'mb-3 mb-md-0' -%}
  {% when 4 %}
  {%- assign col = 'row-cols-md-3 row-cols-lg-4' -%}
  {%- assign mb = 'mb-3 mb-md-0' -%}
{% endcase %}

{%- assign align_text = '' -%}
{%- assign align_col = '' -%}
{%- if center -%}
  {%- assign align_text = 'text-md-center' -%}
  {%- assign align_col = 'justify-content-md-center' -%}
{%- endif -%}

{%- if background -%}
  {%- assign custom_background = 'bg-light' -%}
{%- endif -%}

<div class="py-5 {{ custom_background }}">
  <div class="container">
    {% if title != blank %}
      <div class="{{ align_text }}">
        <h2>{{ title | escape }}</h2>
        {% if subtitle != blank %}
          <p>{{ subtitle | escape }}</p>
        {% endif %}
      </div>
    {% endif %}
    <div class="row row-cols-1 {{ col }} {{ align_col }}">
      {% for block in section.blocks limit: section.blocks.size %}
        <div class="col {{ mb }}" {{ block.shopify_attributes }}>
          {%- assign page = pages[block.settings.id_page] -%}
          {% include 'page', page: page %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
