<div class="price">
  {% if p.unit_price_measurement %}
    <dt>
      <span class="visually-hidden visually-hidden--inline">{{ 'products.product.unit_price_label' | t }}</span>
    </dt>
    <dd class="price-unit-price">
      {%- capture unit_price_separator -%}
        <span aria-hidden="true">/</span><span class="visually-hidden">{{ 'general.accessibility.unit_price_separator' | t }}&nbsp;</span>
      {%- endcapture -%}
      {%- capture unit_price_base_unit -%}
        <span data-unit-price-base-unit>
          {%- if p.unit_price_measurement -%}
            {%- if p.unit_price_measurement.reference_value != 1 -%}
              {{- p.unit_price_measurement.reference_value -}}
            {%- endif -%}
            {{ p.unit_price_measurement.reference_unit }}
          {%- endif -%}
        </span>
      {%- endcapture -%}
      <span data-unit-price>{{ p.unit_price | money }}</span>{{- unit_price_separator -}}{{- unit_price_base_unit -}}
    </dd>
  {% else %}
    {{ p.price | money }}</p>
  {% endif %}
</div>
