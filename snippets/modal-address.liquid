{% if edit %}
  {% assign id = address.id %}
  {% assign title = 'customer.addresses.edit_address' | t %}
  {% assign cta = 'customer.addresses.edit' | t %}
{% else %}
  {% assign id = 0 %}
  {% assign title = 'customer.addresses.add_new' | t %}
  {% assign cta = 'customer.addresses.add' | t %}
{% endif %}

<div class="modal fade" id="addressModal_{{ id }}" tabindex="-1" aria-labelledby="" {% unless form.errors %}aria-hidden="true"{% endunless %}>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">{{ title }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        {% form 'customer_address', address %}
          {{ form.errors | default_errors }}

<div class="row">
  <div class="col-md-6 mb-3">
    <label for="first_name_{{ id }}" class="form-label">{{ 'customer.addresses.first_name' | t }}</label>
    <input type="text" class="form-control" value="{{form.first_name}}" name="address[first_name]" id="first_name_{{ id }}" size="30" required>
  </div>
  <div class="col-md-6 mb-3">
    <label for="last_name_{{ id }}" class="form-label">{{ 'customer.addresses.last_name' | t }}</label>
    <input type="text" class="form-control" value="{{form.last_name}}" name="address[last_name]" id="last_name_{{ id }}" size="30" required>
  </div>
  <div class="col-md-6 mb-3">
    <label for="company_{{ id }}" class="form-label">{{ 'customer.addresses.company' | t }}</label>
    <input type="text" class="form-control" value="{{form.company}}" name="address[company]" id="company_{{ id }}">
  </div>
  <div class="col-12 mb-3">
    <label for="address1_{{ id }}" class="form-label">{{ 'customer.addresses.address1' | t }}</label>
    <input type="text" class="form-control" value="{{form.address1}}" name="address[address1]" id="address1_{{ id }}" required>
  </div>
  <div class="col-12 mb-3">
    <label for="address2_{{ id }}" class="form-label">{{ 'customer.addresses.address2' | t }}</label>
    <input type="text" class="form-control" value="{{form.address2}}" name="address[address2]" id="address2_{{ id }}">
  </div>
  <div class="col-md-6 mb-3">
    <label for="city_{{ id }}" class="form-label">{{ 'customer.addresses.city' | t }}</label>
    <input type="text" class="form-control" value="{{form.phone}}" name="address[city]" id="city_{{ id }}" required>
  </div>
  <div class="col-md-6 mb-3">
    <label for="zip_{{ id }}" class="form-label">{{ 'customer.addresses.zip' | t }}</label>
    <input type="text" class="form-control" value="{{form.zip}}" name="address[zip]" id="zip_{{ id }}" required>
  </div>
  <div class="col-md-6 mb-3">
    <label for="province_{{ id }}" class="form-label">{{ 'customer.addresses.province' | t }}</label>
    <select name="address[province]" class="form-control" id="province_{{ id }}"></select>
  </div>
  <div class="col-md-6 mb-3">
    <!-- See docs for @shopify/theme-addresses to support Country and Province -->
    <label for="country_{{ id }}" class="form-label">{{ 'customer.addresses.country' | t }}</label>
    <select name="address[country]" class="form-control" id="country_{{ id }}" required></select>
  </div>
  <div class="col-md-6 mb-3">
    <label for="phone_{{ id }}" class="form-label">{{ 'customer.addresses.phone' | t }}</label>
    <input type="tel" class="form-control" value="{{form.phone}}" name="address[phone]" id="phone_{{ id }}" required>
  </div>
  <div class="col-12 mb-3">
    <div class="form-check form-check-inline mb-3">
      {{ form.set_as_default_checkbox | replace: '<input', '<input class="form-check-input"' }}
      <label for="address_default_address_new" class="form-check-label">{{ 'customer.addresses.set_default' | t }}</label>
    </div>
    <div class="d-grid">
      <input type="submit" class="btn btn-primary" value="{{ cta }}">
    </div>
  </div>
</div>

        {% endform %}
      </div>
    </div>
  </div>
</div>
