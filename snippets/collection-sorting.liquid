<div class="collection__sorting js-sorting">
  <label class="filter-dropdown__label me-1" for="sortBy">
    <span class="filter-dropdown__label--title">{{ 'collections.sorting.title' | t }}</span>
    <span class="filter-dropdown__label--active"></span>
  </label>
  {% assign sort_by = collection.sort_by | default: collection.default_sort_by %}
  <select name="sort_by" id="sortBy"
    class="form-select bg-light js-sortby"
    aria-describedby="a11y-refresh-page-message a11y-selection-message"
    data-default-sortby="{{ collection.default_sort_by }}"
  >
    {%- for option in collection.sort_options -%}
      {%- if option.value == 'price-ascending' or option.value == 'price-descending' or option.value == 'manual' -%}
        <option value="{{ option.value }}" {% if option.value == sort_by %}selected="selected"{% endif %}>{{ option.name }}</option>
      {%- endif -%}
    {%- endfor -%}
  </select>
</div>
