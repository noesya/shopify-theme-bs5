{%- unless alt -%}
  {% assign alt = src.alt %}
{%- endunless -%}

{%- unless size -%}
  {% assign size = 'large' %}
{%- endunless -%}

<img
  {%- unless crop -%}
    src="{{ src | img_url: size }}"
  {%- else -%}
    src="{{ src | img_url: size, crop: crop }}"
  {%- endunless -%}
  alt="{{ alt | escape }}"
  class="{{ class }}"
  {%- if src.height -%}
    height="{{src.height}}"
  {%- endif -%}
  {%- if src.width -%}
    width="{{src.width}}"
  {%- endif -%}
  loading="lazy"
  >
