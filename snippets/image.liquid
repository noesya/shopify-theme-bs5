{%- assign loading = 'loading="lazy"' -%}
{%- if lazy == false -%}
  {%- assign loading = '' -%}
{%- endif -%}
{%- assign custom_size = 'large' -%}
{%- if size -%}
  {%- assign custom_size = size -%}
{%- endif -%}
<img
  src="{{ src | img_url: custom_size, crop: 'center' }}"
  alt="{{ alt | escape }}"
  class="{{ class }}"
  {%- if src.height -%}
    height="{{src.height}}"
  {%- endif -%}
  {%- if src.width -%}
    width="{{src.width}}"
  {%- endif -%}
  {{ loading }}
  >
