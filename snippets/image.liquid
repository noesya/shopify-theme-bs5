{%- unless alt -%}
  {% assign alt = src.alt %}
{%- endunless -%}

{%- unless size -%}
  {% assign size = 'large' %}
{%- endunless -%}

{%- unless crop -%}
  {% assign crop = 'center' %}
{%- endunless -%}


<img
  src="{{ src | img_url: size, crop: crop }}"
  alt="{{ alt | escape }}"
  class="{{ class }}"
  {%- if src.height -%}
    height="{{src.height}}"
  {%- endif -%}
  {%- if src.width -%}
    width="{{src.width}}"
  {%- endif -%}
  loading="lazy"
  >
